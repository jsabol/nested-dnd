{
	"extends": "plugin:node/recommended",
	"plugins": ["node"],
	"env": {
		"node": true,
		"es6": true
	},
	"ecmaFeatures": {
		"blockBindings": true
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": ["error", "unix"],
		"eqeqeq": ["warn", "always"],
		"radix": ["warn", "always"],
		"array-callback-return": ["warn"],
		"no-console": "off",
		"no-process-env": "off",
		"no-extend-native": [
			2,
			{
				"exceptions": ["Array"]
			}
		],
		"node/no-unpublished-require": "off"
	}
}
